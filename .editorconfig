# editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

# Array syntax isn't widely supported.
# List file extensions separately.
[*.md]
trim_trailing_whitespace = false

# The following are not widely supported
# among editor plugins.
max_line_length = 100
quote_type = single
curly_bracket_next_line = false
spaces_around_operators = true
spaces_around_brackets = outside
