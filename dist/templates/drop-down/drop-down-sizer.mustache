<ul class="drop-down__sizer{{#flushDirection}} drop-down__menu--flush-{{flushDirection}}{{/flushDirection}}">
  {{#menuItems}}
    <li class="drop-down__menu-option{{#isCurrent}} drop-down__menu-option--current{{#hideCurrent}} drop-down__menu-option--hidden{{/hideCurrent}}{{/isCurrent}}"><span class="drop-down__menu-option-trigger">{{text}}</span></li>
  {{/menuItems}}
  <li class="drop-down__menu-option"><span class="drop-down__menu-option-trigger">{{text}}{{^text}}{{triggerText}}{{/text}}</span></li>
</ul>
